<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="JuegoMarvel.Views.Inicio"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:JuegoMarvel.ModuloInicio.ViewModel"
    Title="Inicio"
    x:DataType="viewModels:InicioViewModel">

    <Grid ColumnDefinitions="*,auto">

        <Image
            Grid.Column="0"
            Aspect="AspectFill"
            Source="fondo_inicio.png" />

        <Grid Grid.Column="0" RowDefinitions="*,auto">

            <!--#region ContenidoPrincipal-->
            <Grid
                Grid.Row="0"
                ColumnDefinitions="auto,*,auto"
                ColumnSpacing="10" />
            <!--#endregion-->

            <Grid RowDefinitions="auto,*">

                <Grid Grid.Row="0" ColumnDefinitions="*,auto">
                    <HorizontalStackLayout
                        Grid.Column="0"
                        Margin="10,-5,0,0"
                        Spacing="15">
                        <ImageButton
                            Padding="8"
                            BackgroundColor="Black"
                            BorderColor="White"
                            BorderWidth="2"
                            Clicked="OnAyudaTapped"
                            CornerRadius="50"
                            HeightRequest="45"
                            InputTransparent="False"
                            Source="icono_pregunta.png"
                            WidthRequest="45" />

                        <ImageButton
                            Padding="8"
                            BackgroundColor="Black"
                            BorderColor="White"
                            BorderWidth="2"
                            Clicked="OnConfigTapped"
                            CornerRadius="50"
                            HeightRequest="45"
                            InputTransparent="False"
                            Source="icono_config.png"
                            WidthRequest="45" />
                    </HorizontalStackLayout>

                    <Grid Grid.Column="1">
                        <Image
                            Margin="5"
                            HeightRequest="60"
                            Source="bar_menu_top.png" />

                        <HorizontalStackLayout Margin="20,-7,0,0" Spacing="10">
                            <HorizontalStackLayout Spacing="5">
                                <Image HeightRequest="40" Source="icono_exp.png" />

                                <Label HeightRequest="20" Text="{Binding Puntos}" />
                            </HorizontalStackLayout>

                            <Border
                                Padding="8"
                                BackgroundColor="White"
                                HeightRequest="40"
                                InputTransparent="False"
                                StrokeShape="10"
                                WidthRequest="6" />

                            <HorizontalStackLayout Spacing="5">
                                <Image HeightRequest="40" Source="icono_moneda.png" />

                                <Label HeightRequest="20" Text="{Binding Monedas}" />
                            </HorizontalStackLayout>


                            <Border
                                Padding="8"
                                BackgroundColor="White"
                                HeightRequest="40"
                                InputTransparent="False"
                                StrokeShape="10"
                                WidthRequest="6" />

                            <HorizontalStackLayout Spacing="5">
                                <Grid>
                                    <Image
                                        HeightRequest="50"
                                        Source="icono_usuario.png"
                                        WidthRequest="50" />
                                    <Grid Margin="0,30,0,0" HeightRequest="15">
                                        <Image Source="caja_nivel.png" />
                                        <Label
                                            Margin="0,3,0,0"
                                            FontFamily="LuckiestGuy"
                                            HeightRequest="20"
                                            HorizontalTextAlignment="Center"
                                            Text="{Binding Nivel}" />
                                    </Grid>
                                </Grid>

                                <Label
                                    FontFamily="LuckiestGuy"
                                    HeightRequest="20"
                                    Text="{Binding NombreUsuario}" />

                            </HorizontalStackLayout>


                        </HorizontalStackLayout>
                    </Grid>

                </Grid>

                <HorizontalStackLayout Grid.Row="1" Margin="170,10,0,0">
                    <Grid ColumnDefinitions="*,auto" ColumnSpacing="90">

                        <VerticalStackLayout Spacing="10">
                            <HorizontalStackLayout Spacing="10">

                                <Grid>
                                    <Image Source="img_dos.png" />
                                    <Label
                                        FontFamily="LuckiestGuy"
                                        FontSize="16"
                                        HorizontalTextAlignment="Center"
                                        Text="BASADO EN MARVEL AVENGERS ALLIANCE"
                                        WidthRequest="160" />

                                </Grid>

                                <Grid>
                                    <Image Source="img_uno.png" />
                                    <Label
                                        FontFamily="LuckiestGuy"
                                        FontSize="16"
                                        HorizontalTextAlignment="Center"
                                        Text="HECHO POR UN FAN"
                                        WidthRequest="160" />

                                </Grid>

                            </HorizontalStackLayout>

                            <HorizontalStackLayout Spacing="10">

                                <Grid>
                                    <Image Source="img_tres.png" />
                                    <Label
                                        FontFamily="LuckiestGuy"
                                        FontSize="18"
                                        HorizontalTextAlignment="Center"
                                        Text="DISFRUTEN!"
                                        WidthRequest="160" />

                                </Grid>

                                <Grid>
                                    <Image Source="img_cuatro.png" />
                                    <Label
                                        FontFamily="LuckiestGuy"
                                        FontSize="16"
                                        HorizontalTextAlignment="Center"
                                        Text="SUPERHEROES: SOLO MARVEL"
                                        WidthRequest="160" />

                                </Grid>

                            </HorizontalStackLayout>
                        </VerticalStackLayout>

                        <!--  botones home, tienda, equipo  -->
                        <VerticalStackLayout Grid.Column="1" Spacing="12">

                            <Border
                                Grid.Column="2"
                                Padding="0"
                                BackgroundColor="Black"
                                HeightRequest="63"
                                HorizontalOptions="Center"
                                Stroke="White"
                                StrokeThickness="2"
                                VerticalOptions="Center"
                                WidthRequest="100">
                                <Border.GestureRecognizers>
                                    <!--
                                        Command="{Binding HomeTappedCommand}"
                                        CommandParameter="Home"
                                    -->
                                    <TapGestureRecognizer Tapped="OnHomeTapped" />
                                </Border.GestureRecognizers>

                                <!--  Contenido: imagen arriba, texto abajo, ambos centrados  -->
                                <StackLayout
                                    HorizontalOptions="Center"
                                    Spacing="0"
                                    VerticalOptions="Center">
                                    <Image
                                        HeightRequest="35"
                                        HorizontalOptions="Center"
                                        Source="icono_home.png"
                                        VerticalOptions="End"
                                        WidthRequest="35" />
                                    <Label
                                        FontFamily="LuckiestGuy"
                                        FontSize="20"
                                        HorizontalOptions="Center"
                                        Text="HOME"
                                        TextColor="White"
                                        VerticalOptions="Start" />
                                </StackLayout>
                            </Border>

                            <Border
                                Grid.Column="2"
                                Padding="0"
                                BackgroundColor="Black"
                                HeightRequest="63"
                                HorizontalOptions="Center"
                                Stroke="White"
                                StrokeThickness="2"
                                VerticalOptions="Center"
                                WidthRequest="100">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnTiendaTapped" />
                                </Border.GestureRecognizers>
                                <!--  Contenido: imagen arriba, texto abajo, ambos centrados  -->
                                <StackLayout
                                    HorizontalOptions="Center"
                                    Spacing="-5"
                                    VerticalOptions="Center">
                                    <Image
                                        HeightRequest="40"
                                        HorizontalOptions="Center"
                                        Source="icono_tienda.png"
                                        WidthRequest="60" />
                                    <Label
                                        FontFamily="LuckiestGuy"
                                        FontSize="20"
                                        HorizontalOptions="Center"
                                        Text="TIENDA"
                                        TextColor="White"
                                        VerticalOptions="Start" />
                                </StackLayout>
                            </Border>

                            <Border
                                Grid.Column="2"
                                Padding="0"
                                BackgroundColor="Black"
                                HeightRequest="63"
                                HorizontalOptions="Center"
                                Stroke="White"
                                StrokeThickness="2"
                                VerticalOptions="Center"
                                WidthRequest="100">
                                <Border.GestureRecognizers>
                                    <!--
                                        Command="{Binding HomeTappedCommand}"
                                        CommandParameter="Home"
                                    -->
                                    <TapGestureRecognizer Tapped="OnEquipoTapped" />
                                </Border.GestureRecognizers>
                                <!--  Contenido: imagen arriba, texto abajo, ambos centrados  -->
                                <StackLayout
                                    HorizontalOptions="Center"
                                    Spacing="-5"
                                    VerticalOptions="Center">
                                    <Image
                                        HeightRequest="40"
                                        HorizontalOptions="Center"
                                        Source="icono_equipo.png"
                                        WidthRequest="40" />
                                    <Label
                                        FontFamily="LuckiestGuy"
                                        FontSize="18"
                                        HorizontalOptions="Center"
                                        Text="EQUIPO"
                                        TextColor="White"
                                        VerticalOptions="Start" />
                                </StackLayout>
                            </Border>



                        </VerticalStackLayout>
                    </Grid>
                </HorizontalStackLayout>

            </Grid>

            <!--#region BarMenuBotton-->
            <Grid Grid.Row="1">
                <Grid ColumnDefinitions="auto,auto,*">
                    <BoxView
                        Grid.Column="0"
                        BackgroundColor="#181818"
                        HeightRequest="50"
                        Opacity="0.95"
                        VerticalOptions="End"
                        WidthRequest="12">
                        <BoxView.Shadow>
                            <Shadow
                                Brush="White"
                                Opacity="0.5"
                                Radius="20"
                                Offset="10,-10" />
                        </BoxView.Shadow>
                    </BoxView>


                    <Grid Grid.Column="1" RowDefinitions="*,auto">

                        <BoxView
                            Grid.Row="0"
                            BackgroundColor="Transparent"
                            HeightRequest="35" />

                        <BoxView
                            Grid.Row="1"
                            BackgroundColor="#181818"
                            HeightRequest="15"
                            Opacity="0.95"
                            WidthRequest="160" />
                    </Grid>

                    <Grid Grid.Column="2" VerticalOptions="End">

                        <BoxView
                            BackgroundColor="#181818"
                            HeightRequest="50"
                            Opacity="0.95">
                            <BoxView.Shadow>
                                <Shadow
                                    Brush="White"
                                    Opacity="0.3"
                                    Radius="10"
                                    Offset="5,-10" />

                            </BoxView.Shadow>
                        </BoxView>

                        <Grid ColumnDefinitions="*,auto">
                            <!--#region Botones navegación-->
                            <Grid
                                Grid.Column="1"
                                Margin="0,0,15,0"
                                ColumnDefinitions="*,*,*"
                                ColumnSpacing="10" />
                            <!--#endregion-->
                        </Grid>
                    </Grid>

                </Grid>

            </Grid>
            <!--#endregion-->

        </Grid>
        <!--#region Boton Encima de todo-->
        <AbsoluteLayout Grid.Column="0">

            <Image
                AbsoluteLayout.LayoutBounds="0.98,0.97"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Source="icono_copyright.png" />

            <Grid
                Margin="0,0,0,5"
                AbsoluteLayout.LayoutBounds="0.022,0.95"
                AbsoluteLayout.LayoutFlags="PositionProportional">
                <Grid.GestureRecognizers>
                    <!--
                        Command="{Binding HomeTappedCommand}"
                        CommandParameter="Home"
                    -->
                    <TapGestureRecognizer Tapped="OnEmpezarTapped" />
                </Grid.GestureRecognizers>

                <Image Grid.Column="0" Source="boton_empezar.png" />

                <Button
                    Grid.Column="0"
                    BackgroundColor="Transparent"
                    FontAttributes="Bold"
                    FontFamily="LuckiestGuy"
                    FontSize="25"
                    Text="EMPEZAR"
                    TextColor="White" />

            </Grid>
        </AbsoluteLayout>
        <!--#endregion-->


    </Grid>

</ContentPage>