<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="JuegoMarvel.Views.Login"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:JuegoMarvel.ModuloLogin.ViewModel"
    Title="Login"
    Background="White">

    <ContentPage.BindingContext>
        <viewModels:LoginViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <VerticalStackLayout
            Grid.Column="0"
            Margin="0,12,0,0"
            Padding="20"
            Spacing="5">
            <HorizontalStackLayout HorizontalOptions="Center">
                <Image
                    HeightRequest="80"
                    Source="icono_marvel.png"
                    WidthRequest="80" />
                <Label
                    FontFamily="LuckiestGuy"
                    FontSize="20"
                    Text="INICIAR SESION"
                    TextColor="Black"
                    VerticalOptions="Center" />
            </HorizontalStackLayout>

            <Border
                Padding="8"
                BackgroundColor="Black"
                InputTransparent="False"
                StrokeShape="RoundRectangle 10">
                <Entry
                    Placeholder="NombreUsuario"
                    Style="{DynamicResource EntryLogin}"
                    Text="{Binding NombreUsuario}" />
            </Border>

            <Border
                Padding="8"
                BackgroundColor="Black"
                InputTransparent="False"
                StrokeShape="RoundRectangle 10">
                <Entry
                    Placeholder="Contraseña"
                    Style="{DynamicResource EntryLogin}"
                    Text="{Binding Contrasena}" />
            </Border>



            <Grid ColumnDefinitions="auto,*,auto">

                <HorizontalStackLayout Grid.Column="0">
                    <CheckBox Color="Black" />
                    <Label
                        Style="{DynamicResource TextosGenerales}"
                        Text="Mantener Sesión"
                        TextColor="Black"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>

                <Button
                    Grid.Column="2"
                    Padding="0"
                    BackgroundColor="Transparent"
                    Command="{Binding ComandoNavOlvidarInformacion}"
                    FontSize="10"
                    HeightRequest="30"
                    HorizontalOptions="Center"
                    LineBreakMode="WordWrap"
                    Text="Te has olvidado el Usuario o Contraseña"
                    TextColor="Black"
                    WidthRequest="130" />
            </Grid>



            <Grid ColumnDefinitions="*,*">

                <HorizontalStackLayout Grid.Column="0">
                    <Border
                        Padding="10"
                        BackgroundColor="Black"
                        InputTransparent="False"
                        MaximumHeightRequest="40"
                        MaximumWidthRequest="40"
                        StrokeShape="RoundRectangle 25">

                        <ImageButton
                            Background="Transparent"
                            Command="{Binding ComandoNavCrearCuenta}"
                            HeightRequest="25"
                            MaximumHeightRequest="80"
                            MaximumWidthRequest="80"
                            MinimumHeightRequest="10"
                            MinimumWidthRequest="10"
                            Source="icono_crear_cuenta.png"
                            WidthRequest="25" />

                    </Border>

                    <Label
                        Margin="0,0,0,3"
                        FontSize="13"
                        Style="{DynamicResource TextosGenerales}"
                        Text="Crear cuenta"
                        TextColor="Black"
                        VerticalOptions="Center" />

                </HorizontalStackLayout>

                <Button
                    Grid.Column="1"
                    Background="#800000"
                    Command="{Binding comandoLogearse}"
                    ImageSource="arrow_login.svg" />

            </Grid>

        </VerticalStackLayout>



        <Image
            Grid.Column="1"
            Aspect="AspectFill"
            Source="marvel.png" />

    </Grid>

</ContentPage>