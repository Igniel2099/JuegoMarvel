<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="JuegoMarvel.ModuloLogin.View.OlvidarInformacion"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:JuegoMarvel.ModuloLogin.ViewModel"
    Title="OlvidarInformacion">

    <ContentPage.BindingContext>
        <viewModels:OlvidarInformacionViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <!--  Imagen de fondo  -->
        <Image Source="fondo_pantalla_completa.png" />
        <AbsoluteLayout>
            <!--  Imagen del logotipo  -->
            <Image
                AbsoluteLayout.LayoutBounds="0.98,0.015,65,65"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                HeightRequest="65"
                Source="icono_marvel.png"
                WidthRequest="65" />

            <Button
                AbsoluteLayout.LayoutBounds="0.01,0.02,100,60"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Background="Black"
                BorderColor="White"
                BorderWidth="2"
                Command="{Binding ComandoNavVolverAtras}"
                CornerRadius="15"
                FontAttributes="Bold"
                FontFamily="LuckiestGuy"
                FontSize="18"
                HeightRequest="40"
                Text="&lt;ATRAS"
                TextColor="White"
                WidthRequest="100" />

        </AbsoluteLayout>

        <VerticalStackLayout Margin="0,10,0,0" Spacing="10">
            <Grid HeightRequest="53" WidthRequest="551">
                <Image
                    HeightRequest="53"
                    Source="fondo_titulo.png"
                    WidthRequest="551" />
                <Label
                    Margin="0,5,0,0"
                    FontFamily="LuckiestGuy"
                    FontSize="30"
                    HorizontalOptions="Center"
                    Text="RECUPERAR USUARIO O CONTRASEÃ‘A"
                    TextColor="White" />
            </Grid>
            <Grid HeightRequest="73" WidthRequest="519">
                <Image
                    HeightRequest="73"
                    Source="contenedor_correo.png"
                    WidthRequest="519" />
                <HorizontalStackLayout>
                    <Label
                        Margin="0,12,0,0"
                        FontAttributes="Bold"
                        FontSize="16"
                        HorizontalTextAlignment="Center"
                        Text="Correo Electronico"
                        TextColor="White"
                        WidthRequest="111" />

                    <Border
                        Padding="8"
                        BackgroundColor="Black"
                        HeightRequest="50"
                        InputTransparent="False"
                        StrokeShape="RoundRectangle 10">
                        <Entry
                            HeightRequest="28"
                            Text="{Binding CorreoElectronico, Mode=TwoWay}"
                            WidthRequest="342" />
                    </Border>

                </HorizontalStackLayout>

            </Grid>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="350">
                <Button
                    Background="Black"
                    BorderColor="White"
                    BorderWidth="2"
                    Command="{Binding ComandoVolverEnviar}"
                    CornerRadius="15"
                    FontAttributes="Bold"
                    Text="Volver a Enviar"
                    TextColor="White" />
                <Button
                    Background="Black"
                    BorderColor="White"
                    BorderWidth="2"
                    Command="{Binding ComandoEnviar}"
                    CornerRadius="15"
                    FontAttributes="Bold"
                    Text="Enviar"
                    TextColor="White" />

            </HorizontalStackLayout>

            <Grid>
                <Image
                    HeightRequest="87"
                    Source="contenedor_cod.png"
                    WidthRequest="519" />
                <VerticalStackLayout
                    HeightRequest="73"
                    Spacing="5"
                    WidthRequest="519">
                    <Label
                        Margin="0,0,0,0"
                        FontAttributes="Bold"
                        FontSize="17"
                        HorizontalOptions="Center"
                        Text="Escribe el codigo de confirmacion de tu correo electronico"
                        TextColor="White" />

                    <Border
                        Padding="3,0"
                        BackgroundColor="Black"
                        HeightRequest="40"
                        InputTransparent="False"
                        StrokeShape="RoundRectangle 10"
                        WidthRequest="88">
                        <Entry Placeholder="1" Text="{Binding CodigoConfirmacion, Mode=TwoWay}" />
                    </Border>


                </VerticalStackLayout>
            </Grid>

            <Button
                Background="Black"
                BorderColor="White"
                BorderWidth="2"
                Command="{Binding ComandoEnviar}"
                CornerRadius="15"
                FontAttributes="Bold"
                FontSize="18"
                HeightRequest="40"
                Text="Confirmar"
                TextColor="White"
                WidthRequest="141" />

        </VerticalStackLayout>
    </Grid>
</ContentPage>