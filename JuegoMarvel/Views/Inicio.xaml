<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="JuegoMarvel.Views.Inicio"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Inicio">

    <Grid ColumnDefinitions="*,auto">

        <Image
            Grid.Column="0"
            Aspect="AspectFill"
            Source="fondo_inicio.png" />

        <Grid Grid.Column="0" RowDefinitions="*,auto">

            <!--#region ContenidoPrincipal-->
            <Grid
                Grid.Row="0"
                ColumnDefinitions="auto,*,auto"
                ColumnSpacing="10" />
            <!--#endregion-->

            <Grid RowDefinitions="auto,*">

                <Grid Grid.Row="0" ColumnDefinitions="*,auto">
                    <HorizontalStackLayout Grid.Column="0" Spacing="8">
                        <Border
                            Padding="8"
                            BackgroundColor="Black"
                            InputTransparent="False"
                            StrokeShape="RoundRectangle 20"
                            WidthRequest="50" />

                        <Border
                            Padding="8"
                            BackgroundColor="Black"
                            InputTransparent="False"
                            StrokeShape="RoundRectangle 20"
                            WidthRequest="50" />
                    </HorizontalStackLayout>

                    <Grid Grid.Column="1">
                        <Border
                            Padding="8"
                            BackgroundColor="Gray"
                            HeightRequest="50"
                            InputTransparent="False"
                            StrokeShape="RoundRectangle 20"
                            WidthRequest="412" />

                        <HorizontalStackLayout>
                            <Border
                                Padding="8"
                                BackgroundColor="White"
                                InputTransparent="False"
                                StrokeShape="RoundRectangle 20" />

                            <Label Text="1000" />

                            <Border
                                Padding="8"
                                BackgroundColor="White"
                                HeightRequest="33"
                                InputTransparent="False"
                                WidthRequest="2" />

                            <Border
                                Padding="8"
                                BackgroundColor="White"
                                InputTransparent="False"
                                StrokeShape="RoundRectangle 20" />

                            <Label Text="1000" />

                            <Border
                                Padding="8"
                                BackgroundColor="White"
                                HeightRequest="33"
                                InputTransparent="False"
                                WidthRequest="2" />

                            <Border
                                Padding="8"
                                BackgroundColor="Red"
                                HeightRequest="40"
                                InputTransparent="False"
                                StrokeShape="RoundRectangle 20"
                                WidthRequest="40" />

                            <Label Text="Nombre de Usuario" />

                        </HorizontalStackLayout>
                    </Grid>

                </Grid>

                <HorizontalStackLayout Grid.Row="1" Margin="160,30,0,0">
                    <Grid ColumnDefinitions="*,auto" ColumnSpacing="120">

                        <VerticalStackLayout Spacing="10">
                            <HorizontalStackLayout Spacing="10">
                                <Border
                                    BackgroundColor="Black"
                                    HeightRequest="99"
                                    Stroke="White"
                                    StrokeThickness="3"
                                    WidthRequest="244" />
                                <Border
                                    BackgroundColor="Black"
                                    HeightRequest="99"
                                    Stroke="White"
                                    StrokeThickness="3"
                                    WidthRequest="145" />
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Spacing="10">
                                <Border
                                    BackgroundColor="Black"
                                    HeightRequest="99"
                                    Stroke="White"
                                    StrokeThickness="3"
                                    WidthRequest="145" />
                                <Border
                                    BackgroundColor="Black"
                                    HeightRequest="99"
                                    Stroke="White"
                                    StrokeThickness="3"
                                    WidthRequest="244" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="1" Spacing="9">
                            <Button
                                Grid.Column="2"
                                Padding="0,2,0,0"
                                BackgroundColor="Black"
                                BorderColor="White"
                                BorderWidth="2"
                                ContentLayout="Top,-5"
                                CornerRadius="0"
                                FontFamily="LuckiestGuy"
                                FontSize="20"
                                HeightRequest="63"
                                HorizontalOptions="Center"
                                ImageSource="icono_home.png"
                                Text="HOME"
                                TextColor="White"
                                WidthRequest="100" />
                            <Button
                                Grid.Column="2"
                                Padding="0,2,0,0"
                                BackgroundColor="Black"
                                BorderColor="White"
                                BorderWidth="2"
                                Clicked="Button_Clicked"
                                ContentLayout="Top,-5"
                                CornerRadius="0"
                                FontFamily="LuckiestGuy"
                                FontSize="20"
                                HeightRequest="63"
                                HorizontalOptions="Center"
                                ImageSource="icono_tienda.png"
                                Text="TIENDA"
                                TextColor="White"
                                WidthRequest="100" />

                            <Button
                                Grid.Column="2"
                                Padding="0,2,0,0"
                                BackgroundColor="Black"
                                BorderColor="White"
                                BorderWidth="2"
                                ContentLayout="Top,-5"
                                CornerRadius="0"
                                FontFamily="LuckiestGuy"
                                FontSize="20"
                                HeightRequest="63"
                                HorizontalOptions="Center"
                                ImageSource="icono_equipo.png"
                                Text="EQUIPO"
                                TextColor="White"
                                WidthRequest="100" />


                        </VerticalStackLayout>
                    </Grid>
                </HorizontalStackLayout>

            </Grid>

            <!--#region BarMenuBotton-->
            <Grid Grid.Row="1">
                <Grid ColumnDefinitions="auto,auto,*">
                    <BoxView
                        Grid.Column="0"
                        BackgroundColor="#181818"
                        HeightRequest="50"
                        Opacity="0.95"
                        VerticalOptions="End"
                        WidthRequest="12">
                        <BoxView.Shadow>
                            <Shadow
                                Brush="White"
                                Opacity="0.5"
                                Radius="20"
                                Offset="10,-10" />
                        </BoxView.Shadow>
                    </BoxView>


                    <Grid Grid.Column="1" RowDefinitions="*,auto">

                        <BoxView
                            Grid.Row="0"
                            BackgroundColor="Transparent"
                            HeightRequest="35" />

                        <BoxView
                            Grid.Row="1"
                            BackgroundColor="#181818"
                            HeightRequest="15"
                            Opacity="0.95"
                            WidthRequest="160" />
                    </Grid>

                    <Grid Grid.Column="2" VerticalOptions="End">

                        <BoxView
                            BackgroundColor="#181818"
                            HeightRequest="50"
                            Opacity="0.95">
                            <BoxView.Shadow>
                                <Shadow
                                    Brush="White"
                                    Opacity="0.3"
                                    Radius="10"
                                    Offset="5,-10" />

                            </BoxView.Shadow>
                        </BoxView>

                        <Grid ColumnDefinitions="*,auto">
                            <!--#region Botones navegación-->
                            <Grid
                                Grid.Column="1"
                                Margin="0,0,15,0"
                                ColumnDefinitions="*,*,*"
                                ColumnSpacing="10" />
                            <!--#endregion-->
                        </Grid>
                    </Grid>

                </Grid>





            </Grid>
            <!--#endregion-->

        </Grid>
        <!--#region Boton Encima de todo-->
        <AbsoluteLayout Grid.Column="0">
            <Grid
                Margin="0,0,0,5"
                AbsoluteLayout.LayoutBounds="0.022,0.95"
                AbsoluteLayout.LayoutFlags="PositionProportional">

                <Image Grid.Column="0" Source="boton_empezar.png" />

                <Button
                    Grid.Column="0"
                    BackgroundColor="Transparent"
                    FontAttributes="Bold"
                    FontFamily="LuckiestGuy"
                    FontSize="25"
                    Text="EMPEZAR"
                    TextColor="White" />

            </Grid>
        </AbsoluteLayout>
        <!--#endregion-->


    </Grid>

</ContentPage>